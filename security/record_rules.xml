<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- قاعدة سجل للمسؤولين (يمكنهم رؤية جميع التذاكر) -->
    <record id="ticket_rule_admin" model="ir.rule">
        <field name="name">Ticket Rule: Administrators</field>
        <field name="model_id" ref="model_ticket"/>
        <field name="domain_force">[(1, '=', 1)]</field> <!-- شرط يسمح بجميع السجلات -->
        <field name="groups" eval="[(4, ref('base.group_system'))]"/> <!-- مجموعة المسؤولين -->
    </record>

    <!-- قاعدة سجل للموظفين (يمكنهم رؤية التذاكر الخاصة بشركتهم فقط) -->
    <record id="ticket_rule_employee" model="ir.rule">
        <field name="name">Ticket Rule: Employees</field>
        <field name="model_id" ref="model_ticket"/>
        <field name="domain_force">[('company_id', '=', user.company_id.id)]</field> <!-- شرط يسمح فقط بالتذاكر الخاصة بشركة المستخدم -->
        <field name="groups" eval="[(4, ref('base.group_user'))]"/> <!-- مجموعة الموظفين -->
    </record>
</odoo>